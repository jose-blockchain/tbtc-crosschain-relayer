{
	"name": "tbtc-relayer",
	"version": "0.1.0",
	"description": "Threshold Network tBTC Cross-Chain Relayer",
	"main": "index.ts",
	"scripts": {
		"start": "npm run build && node --env-file .env dist/index.js",
		"start:dev": "npm run build && node dist/index.js",
		"dev": "ts-node-dev --watch --trace-warnings --env-file .env.dev index.ts",
		"test": "jest",
		"test:unit": "jest --testPathPattern=tests/unit",
		"test:integration": "jest --testPathPattern=tests/integration",
		"test:e2e": "jest --testPathPattern=tests/e2e --runInBand",
		"test:coverage": "jest --coverage",
		"test:watch": "jest --watch",
		"build": "npm run clean:build && tsc",
		"clean:build": "rimraf ./dist",
		"swagger": "node swagger.js"
	},
	"keywords": [],
	"author": "T-Labs",
	"license": "ISC",
	"dependencies": {
		"@ethersproject/experimental": "^5.7.0",
		"axios": "^1.7.2",
		"bitcoinjs-lib": "^6.0.1",
		"compression": "^1.7.4",
		"cors": "^2.8.5",
		"eth-crypto": "^2.6.0",
		"ethers": "5.7.2",
		"express": "^4.18.2",
		"helmet": "^7.1.0",
		"node-cron": "^3.0.3",
		"rimraf": "^6.0.1"
	},
	"devDependencies": {
		"@types/axios": "^0.14.0",
		"@types/compression": "^1.7.5",
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.21",
		"@types/helmet": "^4.0.0",
		"@types/jest": "^29.5.12",
		"@types/node": "^20.14.11",
		"@types/node-cron": "^3.0.11",
		"@types/supertest": "^6.0.2",
		"ganache": "^7.9.4",
		"jest": "^29.7.0",
		"jest-mock-extended": "^3.0.5",
		"nock": "^13.5.4",
		"supertest": "^6.3.4",
		"ts-jest": "^29.1.2",
		"ts-node": "^10.9.2",
		"ts-node-dev": "^2.0.0",
		"typescript": "^5.5.3"
	}
}
