{
  "endOfLine": "lf",
  "printWidth": 100,
  "semi": true,
  "tabWidth": 2,
  "trailingComma": "all",
  "singleQuote": true,
  "overrides": [
    {
      "files": ["*.yml", "*.yaml"],
      "options": {
        "singleQuote": false,
        "bracketSpacing": false
      }
    },
    {
      "files": ["*.json"],
      "options": {
        "singleQuote": false
      }
    }
  ]
}
