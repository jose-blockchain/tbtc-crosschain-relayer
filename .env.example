# Copy to .env.dev and fill in your actual values.
# .env (with secrets) should be in .gitignore.

# --- Application ---
APP_NAME='tBTC Relayer (Dev)'
APP_VERSION='1.0.0-dev'
VERBOSE_APP=true

# --- Server Ports ---
HOST_PORT=4000 # Host machine port
APP_PORT=3333  # Internal container port (must match app config)

# --- CORS ---
CORS_ENABLED=true
CORS_URL='http://localhost:4000' # Client URL for development

# --- Storage ---
JSON_PATH='./data/' # Local path for JSON data

# --- Timers (service-specific, units as per logic) ---
CLEAN_QUEUED_TIME=48
CLEAN_FINALIZED_TIME=12

# --- Blockchain & Wallet (USE DEVELOPMENT/TESTNET VALUES ONLY in .env.dev) ---
PRIVATE_KEY='0x_YOUR_DEVELOPMENT_PRIVATE_KEY_HERE' # Placeholder: DO NOT COMMIT REAL KEYS
CHAIN_TYPE='evm'
CHAIN_NAME='DevChainName (e.g., Arbitrum-Sepolia)'
USE_ENDPOINT='false'

# --- RPC Endpoints (use testnet/dev URLs in .env.dev) ---
L1_RPC='https://your_L1_testnet_rpc_url'
L2_RPC='https://your_L2_testnet_rpc_url'

# --- Contracts (use testnet/dev addresses & block numbers in .env.dev) ---
L2_START_BLOCK=0
L1BitcoinDepositor='0x_L1_DEPOSITOR_TESTNET_ADDRESS'
L2BitcoinDepositor='0x_L2_DEPOSITOR_TESTNET_ADDRESS'
TBTCVault='0x_TBTC_VAULT_TESTNET_ADDRESS'
