generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// For testing, you can use SQLite by setting provider = "sqlite" and url = env("DATABASE_URL")
// Example: provider = "sqlite", url = "file:./test.db" or ":memory:"

model Deposit {
  id        String   @id
  fundingTxHash String
  outputIndex Int
  hashes    Json
  receipt   Json
  owner     String
  status    Int
  L1OutputEvent Json?
  dates     Json
  error     String?
}

model AuditLog {
  id         Int      @id @default(autoincrement())
  timestamp  DateTime @default(now())
  eventType  String
  depositId  String?
  data       Json
  errorCode  Int?
}

model Redemption {
  id        String   @id
  status    String
  data      Json
}
